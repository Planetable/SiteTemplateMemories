{
  "name": "Sepia",
  "description": "A sepia template designed for microblogging",
  "author": "Planetable Team",
  "authorWebsite": "https://planetable.xyz",
  "version": "0.0.21",
  "idealItemsPerPage": 20,
  "generateIndexPagination": true,
  "generateTagPages": true,
  "generateArchive": true,
  "buildNumber": 50,
  "settings": {
    "highlightColor": {
      "name": "Highlight Color",
      "type": "string",
      "defaultValue": "#FF4500",
      "description": "Highlight color, default value: #FF4500 (orangered)"
    },
    "backgroundColor": {
      "name": "Background Color",
      "type": "string",
      "defaultValue": "#F4F1EC",
      "description": "Background color, default value: #F4F1EC (yellowish white)"
    },
    "foregroundColor": {
      "name": "Foreground Color",
      "type": "string",
      "defaultValue": "#000000",
      "description": "Foreground color, default value: #000000 (black)"
    }
  }
}
